pipeline{
  agent any
  environment
  {
  PATH ="/opt/maven/bin:$PATH"
  }
  stages{
    stage("Git Checkout"){
      steps{
            git credentialsId:'github', url: 'https://github.com/dvswathi/hello-world.git'
           }
          }
        stage("Maven Build") {
        steps{
        sh "mvn clean package"
        sh "mv target/*.war target/myweb.war"
        }
        }
     stage("deploy")
     {
     sshagent(['tomcat']) {
   sh """
   scp -o StrictHostKeyChecking=no target/myweb.war ec2-user@172.31.30.167:/opt/tomcat9/webapps/
   
   ssh ec2-user@172.31.30.167 /opt/tomcat9/bin/shutdown.sh
   
  ssh ec2-user@172.31.30.167 /opt/tomcat9/bin/startup.sh
   """
}
     
    }
    }
    }
